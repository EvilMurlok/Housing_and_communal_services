{% extends 'parts/base.twig' %}

{% block title %}
    {{ user.First_name }} {{ user.Last_name }}
{% endblock %}

{% block content %}
    <h2>Личные данные</h2>
    <table class="table">
        <tbody>
        <tr>
            <td>ФИО:</td>
            <td>
                <span>{{ user.First_name }} {{ user.Last_name }} {{ consumer_info.Patronymic }}</span>
            </td>
        </tr>
        <tr>
            <td>Дата рождения:</td>
            <td>
                <span>{{ consumer_info.Birthday }}</span>
            </td>
        </tr>
        <tr>
            <td>Телефон:</td>
            <td>
                <span>{{ user.Telephone_number }}</span>
            </td>
        </tr>
        <tr>
            <td>Адрес электронной почты:</td>
            <td>
                <span>{{ user.Consumer_email }}</span>
            </td>
        </tr>
        <tr>
            <td>Серия и номер паспорта:</td>
            <td>
                <span>{{ consumer_info.Passport_series }} {{ consumer_info.Passport_number }}</span>
            </td>
        </tr>
        <tr>
            <td>Мои лицевые счета:</td>
            <td>
                <ul>
                    <li>Общий счет ЖКУ: {{ consumer_info.Personal_acc_hcs }}</li>
                    <li>Счет городской телефон: {{ consumer_info.Personal_acc_landline_ph }}</li>
                    <li>Среда междугородний телефон: {{ consumer_info.Personal_acc_long_dist_ph }}</li>
                </ul>
            </td>
        </tr>
        <tr>
            <td>Адрес проживания:</td>
            <td>
                <span> г. {{ consumer_info.City_name }}, ул. {{ consumer_info.Street }}, д. {{ consumer_info.House }}</span>
                {% if consumer_info.Housing != 0 %}
                    <span>, корп. {{ consumer_info.Housing }}</span>
                {% endif %}
                <span>, кв. {{ consumer_info.Flat }}.</span>
            </td>
        </tr>
        </tbody>
    </table>
    <h2>Моя управляющая компания</h2>
    <table class="table">
        <tbody>
        <tr>
            <td>Наименование:</td>
            <td>
                <span>{{ consumer_info.Company_name }}</span>
            </td>
        </tr>
        <tr>
            <td>Директор компании:</td>
            <td>
                <span>{{ consumer_info.Full_name_boss }}</span>
            </td>
        </tr>
        <tr>
            <td>Телефон компании:</td>
            <td>
                <span>{{ consumer_info.Telephone_number }}</span>
            </td>
        </tr>
        <tr>
            <td>Адрес электронной почты:</td>
            <td>
                <span>{{ consumer_info.Company_email }}</span>
            </td>
        </tr>
        <tr>
            <td>Адрес:</td>
            <td>
                <span>{{ consumer_info.Address }}</span>
            </td>
        </tr>
        </tbody>
    </table>
{%  endblock %}